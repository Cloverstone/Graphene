<div>
<div class="admin-heading green">
    <span><i class="fa fa-photo"></i> Images<i class="btn btn-default btn pull-right fa fa-plus"></i></span>
</div>
    <ul class="grid cs-style-6" id="image-list">
    	<li id="dropt">
        <div class="thumbnail" style="height:135px;background:#fff;margin:10px 5px 5px 10px;margin:0">
          <figure style="line-height:100px;height:100px;text-align:center;border:solid 1px #eee;background:#f8f8f8 no-repeat 50%"><form action="/images" method="post" class="dropzone clickable" id="image_filename"><input type="hidden" name="_method" value="post" /></form>
          </figure>
          <figcaption class="caption" style="overflow:hidden;height:21px;padding:4px 2px;">
            (Or Click)
          </figcaption>
        </div>

      </li>
   </ul>

    {{^models}}
        <div class="panel-body">
            <h4>No Images</h4>
        </div>
    {{/models}}
</div>